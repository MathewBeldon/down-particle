<% content_for :title, "Editing column" %>

<div class="min-h-screen bg-gray-900 p-6">
  <div class="max-w-md mx-auto">
    <div class="mb-8">
      <h1 class="text-2xl font-bold text-white mb-2">Edit Column</h1>
      <p class="text-gray-400">Update column details</p>
    </div>

    <div class="bg-gray-800 rounded-lg p-6">
      <%= render "form", column: @column %>
    </div>

    <div class="mt-6 flex justify-center">
      <%= link_to @column, method: :delete, 
          data: { confirm: "Are you sure?" },
          class: "text-red-400 hover:text-red-300 text-sm transition-colors duration-200" do %>
        <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
        Delete Column
      <% end %>
    </div>
  </div>
</div>
